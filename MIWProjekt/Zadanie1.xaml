<UserControl x:Class="MIWProjekt.Zadanie1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MIWProjekt"
             mc:Ignorable="d" 
             d:DesignHeight="640" d:DesignWidth="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <oxy:PlotView Model="{Binding graph}"/>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="OutputPanel">
                <TextBlock Text="Zadanie 1: " FontSize="16" FontWeight="Bold" Margin="20 10 20 10"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
